input {
	&[type='text'] {
		padding .6rem 1.2rem
		font inherit
	}
}

button {
	padding 1rem 2rem

	background none
	border .2rem solid #ae
	color #ae
	cursor pointer
	transition background-color .3s ease, color .3s ease

	&:active,
	&:hover,
	&:disabled {
		background #ae
		color #21
	}

	&:disabled {
		opacity .5
		cursor not-allowed
	}
}
