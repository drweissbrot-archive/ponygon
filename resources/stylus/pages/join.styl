& {
	container()

	text-align center
}

.input-group {
	&:not(.--submit) {
		display grid
		grid-template-rows auto auto auto
		grid-template-columns 1fr 2rem 1fr

		label {
			text-align right
			grid-area 2/1
		}

		input {
			grid-area 1/3/4/3
		}
	}

	&.--submit {
		display flex
		justify-content center
		align-items center
	}
}
